#!/usr/bin/env python3

import os
import sys
import requests
import gzip
import xml.etree.ElementTree as ET

def get(url):
    print(f'GET {url}')
    r = requests.get(url)
    return r.text

def location(baseurl):
    tree = ET.fromstring(get(f"{baseurl}/repodata/repomd.xml"))
    database = tree.find('{http://linux.duke.edu/metadata/repo}data[@type="primary"]')
    location = database.find('{http://linux.duke.edu/metadata/repo}location')
    return f"{baseurl}/{location.attrib['href']}"

def database(url):
    text = gzip.decompress(str.encode(get(url)))
    # tree = ET.fromstring(gzip.decompress(str.encode(get(url))))
    print(text)

def packages(baseurl):
    url = location(baseurl)
    doc = database(url)
    return ['foo','bar']

def main(baseurl):
    for package in packages(baseurl):
        print(package)

if __name__ == '__main__':
    main(sys.argv[1])
